{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "POSTed (Unreal Editor)",
            "type": "process",
            "command": "UnrealEd.exe",
            // "windows": {
            //     "options": {
            //         "shell": {
            //             "executable": "cmd.exe"
            //         }
            //     }
            // },
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}\\System"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Make (ucc.exe)"
            ]
        },
        {
            "label": "Make (ucc.exe)",
            "type": "process",
            "command": "ucc.exe",
            // "windows": {
            //     "options": {
            //         "shell": {
            //             "executable": "cmd.exe"
            //         }
            //     }
            // },
            "args": [
                "make"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\System"
            },
            "problemMatcher": [],
            "group": "build",
            "dependsOn": [
                "Setup (copy and modify)",
                "Delete (compiled SjoboMod.u)"
            ]
        },
        {
            "label": "Unpack (Unzips the Postal 2 UnrealScript Source into Parent folder)",
            "type": "process",
            "command": "tar",
            "args": [
                "-xf",
                "POSTAL 2 UnrealScript Source (2020-12-05).zip"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\.."
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Delete (compiled SjoboMod.u)",
            "type": "process",
            "command": "cmd.exe",
            "args": [
                "/C",
                "@del",
                ".\\SjoboMod.u",
                ">nul",
                "2>&1"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\System"
            },
            "problemMatcher": [
                {
                    "owner": "ignore",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "\\[ignore\\] (.*)\\((\\d*),(\\d*)\\): (error|warning) (.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Setup (copy and modify)",
            "type": "process",
            "command": "node",
            "args": [
                ".vscode/setup.js"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":"$node-sass",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Clean",
            "type": "process",
            "command": "echo",
            "args": [
                "Repository has now been cleaned of non repository files and parent has been cleared of Postal 2 UnrealScript Source"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":"$node-sass",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "dependsOn": [
                "Clean (deletes non repository files from repository folder)",
                "Clean (deletes POSTAL 2 UnrealScript Source from parent)"
            ]
        },
        {
            "label": "Clean (deletes non repository files from repository folder)",
            "type": "process",
            "command": "node",
            "args": [
                ".vscode/setup.js",
                "--clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":"$node-sass",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Clean (deletes POSTAL 2 UnrealScript Source from parent)",
            "type": "process",
            "command": "clean.bat",
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "problemMatcher":"$node-sass",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}